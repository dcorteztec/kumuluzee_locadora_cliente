<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="locadora_servico_cliente">
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %marker %m %X %ex %n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- marteleto -->
        <Logger name="br.com.marteleto" level="trace" additivity="false">
            <AppenderRef ref="console"/>
        </Logger>

        <!-- Default logger -->
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
    </Loggers>
</Configuration>